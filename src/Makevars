PKGROOT = ./fasttext
CXX_STD = CXX11
# include adds a header to each file, ugly hack to block call to exit() and replace cerr by cout
PKG_CPPFLAGS = $(SHLIB_PTHREAD_FLAGS) -include r_compliancy.h -I$(PKGROOT)
# pthread is used for multithreading by fastText
PKG_LIBS = $(SHLIB_PTHREAD_FLAGS)

OBJECTS = $(PKGROOT)/args.o $(PKGROOT)/dictionary.o $(PKGROOT)/productquantizer.o $(PKGROOT)/matrix.o $(PKGROOT)/qmatrix.o $(PKGROOT)/vector.o $(PKGROOT)/model.o $(PKGROOT)/utils.o $(PKGROOT)/fasttext.o $(PKGROOT)/main.o fastRtext.o
